@model mvcMovie.ViewModels.HoaDonView
@section body_scripts
{
    @Html.Partial("_LeftMenu.cshtml")
}
@section above_scripts
{
    @Html.Partial("_AboveMenu.cshtml")
}

<hr />
<div class="card-body">
    <h3>Hóa Đơn</h3>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SuaHoaDonData" asp-controller="HoaDon">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="HoaDonDTO.Id" class="control-label"></label>
                    <input asp-for="HoaDonDTO.Id" value="@ViewBag.SuaHoaDon.Id" readonly="readonly" class="form-control" id="exampleInputEmail1" placeholder="Nhập ID" />
                    <span asp-validation-for="HoaDonDTO.Id" class="text-danger"></span>

                </div>

                 <div class="form-group">

                    <label asp-for="HoaDonDTO.NgayLap" class="control-label"></label>
                    <input asp-for="HoaDonDTO.NgayLap" value="@ViewBag.SuaHoaDon.NgayLap"  class="form-control" id="exampleInputEmail1" placeholder="Nhập Ngày" />
                    <span asp-validation-for="HoaDonDTO.NgayLap" class="text-danger"></span>

                </div>

                 <div class="form-group">

                    <label asp-for="HoaDonDTO.KhachHangId" class="control-label"></label>
                    <input asp-for="HoaDonDTO.KhachHangId" value="@ViewBag.SuaHoaDon.KhachHangId" readonly="readonly" class="form-control" id="exampleInputEmail1" placeholder="Nhập ID khách hàng" />
                    <span asp-validation-for="HoaDonDTO.KhachHangId" class="text-danger"></span>

                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>  

            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
