@model mvcMovie.ViewModels.HoaDonView

@{
    ViewData["Title"] = "Create";
}
@section body_scripts
{
    @Html.Partial("_LeftMenu.cshtml")
}
@section above_scripts
{
    @Html.Partial("_AboveMenu.cshtml")
}

<div class="card-body">
   
  @if(ViewBag.Success != null)
    {
        <span class="text-success">@ViewBag.Success</span>
    }

<div class="card-body">
    <h3>Hơn Đơn</h3>
    <div class="col-md-4">
        <form asp-action="ThemHoaDonData" asp-controller="HoaDon">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="exampleInputPassword1" class="control-label">KhachHangId</label>
                <input asp-for="HoaDonDTO.KhachHangId" class="form-control" id="exampleInputPassword1" placeholder="Nhập ID Khách hàng" />
                <span asp-validation-for="HoaDonDTO.KhachHangId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1" class="control-label">Ngày Lập</label>
                <input asp-for="HoaDonDTO.NgayLap" class="form-control" id="exampleInputPassword1" placeholder="Nhập ngày lập" />
                <span asp-validation-for="HoaDonDTO.NgayLap" class="text-danger"></span>
            </div>

             <div>
                <button type="submit" class="btn btn-primary">Thêm</button>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
